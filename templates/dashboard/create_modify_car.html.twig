{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1 class="text-center m-3">{{ modification ? 'Modify Car' : 'Create Car' }}</h1>
		<div class="row">
			<div class="col-md-6 offset-md-3">
				{{ form_start(formCar) }}
				<div class="mb-3">
					{{ form_label(formCar.name) }}
					{{ form_widget(formCar.name, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="mb-3">
					{{ form_label(formCar.nbSeats) }}
					{{ form_widget(formCar.nbSeats, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="mb-3">
					{{ form_label(formCar.nbDoors) }}
					{{ form_widget(formCar.nbDoors, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="mb-3">
					{{ form_label(formCar.cost) }}
					{{ form_widget(formCar.cost, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="mb-3">
					{{ form_label(formCar.category) }}
					{{ form_widget(formCar.category, {'attr': {'class': 'form-control'}}) }}
				</div>
				<button type="submit" class="btn btn-primary">{{ modification ? 'Modify' : 'Create' }}</button>
				{{ form_end(formCar) }}
			</div>
		</div>
	</div>
{% endblock %}
