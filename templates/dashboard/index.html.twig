{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block body %}

	<div class="container py-4">
		<div class="d-flex justify-content-between align-items-center">
			<h1 class="h1">Dashboard</h1>
			<div>
				<a href="/create_car" class="btn btn-primary">Create Car</a>
				<a href="/" class="btn btn-outline-primary">Exit Dashboard</a>
			</div>
		</div>
		<table class="table mt-5">
			<thead>
				<tr>
					<th>Name</th>
					<th>Seats</th>
					<th>Doors</th>
					<th>Cost</th>
					<th>Category</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for car in cars %}
					<tr>
						<td>{{ car.name }}</td>
						<td>{{ car.nbSeats }}</td>
						<td>{{ car.nbDoors }}</td>
						<td>{{ car.cost }}</td>
						<td>{{ car.category.name }}</td>
						<td>
							<a href="{{ path('car_modify', { id: car.id }) }}" class="btn btn-primary btn-sm">Modify</a>
							<a href="{{ path('car_delete', { id: car.id }) }}" class="btn btn-danger btn-sm">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
